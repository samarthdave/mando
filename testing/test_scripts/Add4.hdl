/**
 * Adds two 4-bit values.
 */

CHIP Add4 {
    IN a[4], b[4], carryIn;
    OUT out[4],carry;

    PARTS:
        FullAdder(a=a[0], b=b[0], c=carryIn, sum=out[0], carry=ca);
        FullAdder(a=a[1], b=b[1], c=ca,      sum=out[1], carry=cb);
        FullAdder(a=a[2], b=b[2], c=cb,      sum=out[2], carry=cc);
        FullAdder(a=a[3], b=b[3], c=cc,      sum=out[3], carry=carry);
}